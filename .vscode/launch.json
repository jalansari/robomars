    "version": "0.2.0",
    "configurations": [
        {
            "name": "PytestRun",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "."
            },
            "args": [
                "--capture=no",
                // "tests/test_0_instructionfile_gridextents.py::TestInstructionFile_GridExtents::test_read_grid_extents"
                // "tests/test_1_instructionfile_instructions.py::TestInstructionFile_Instructions"
            ]
        },
        {
            "name": "RunScript",
            "type": "python",
            "request": "launch",
            "program": "robomars.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "args": [
                "tests/testfiles/sample_input"
            ]
        }
    ]
}